<Window x:Class="OnlineClinic.WindowsReg.RegSession"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineClinic.WindowsReg"
        mc:Ignorable="d"
        Title="Запись на прием" Height="650" Width="700">
    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Style="{StaticResource headerBlock}" Opacity="0.6" Text="Запись на прием" TextAlignment="Center" Margin="30"/>

        <TextBlock  Grid.Row="1" Text="Специальность" Style="{StaticResource secondaryBlock}" FontWeight="Medium" Margin="10 4"/>
        <Border Grid.Row="2" BorderBrush="#7F000000" CornerRadius="12" BorderThickness="1">
            <TextBox  x:Name="LastName"/>
        </Border>

        <TextBlock  Grid.Row="3" Text="Врач" Style="{StaticResource secondaryBlock}" FontWeight="Medium" Margin="10 19 10 4"/>
        <Border Grid.Row="4" BorderBrush="#7F000000" CornerRadius="12" BorderThickness="1">
            <TextBox x:Name="FirstName"/>
        </Border>

        <TextBlock  Grid.Row="5" Text="Время записи" Style="{StaticResource secondaryBlock}" FontWeight="Medium" Margin="10 19 10 4"/>
        <Border Grid.Row="6" BorderBrush="#7F000000" CornerRadius="12" BorderThickness="1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <DatePicker x:Name="datePicker" Margin="0,0,10,0"/>
                <ComboBox x:Name="hourComboBox" Margin="0,0,5,0"/>
                <TextBlock Text=":" VerticalAlignment="Center"/>
                <ComboBox x:Name="minuteComboBox" Width="50" Margin="5,0,0,0"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="7" Height="80" Background="#58CF5A" CornerRadius="32" Margin="0 30 0 0" Width="300" HorizontalAlignment="Right">
            <Button Click="SaveSession_Click" Style="{StaticResource interactive}" Content="Сохранить"/>
        </Border>
    </Grid>
</Window>
